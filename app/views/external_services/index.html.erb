<h1><span><%= t('.title')%></span></h1>
<table class="list">
  <tr class="thead">
    <th><%= t('activeldap.attributes.external_service.uid') %></th>
    <th><%= t('activeldap.attributes.external_service.description') %></th>
    <th colspan="2"><%= t('.actions') %></th>
  </tr>

<% @external_services.each do |external_service| %>
  <tr>
    <td data-title="<%= t('activeldap.attributes.external_service.uid') %>"><%= link_to external_service.uid, external_service_path(external_service) %></td>
    <td data-title="<%= t('activeldap.attributes.external_service.description') %>"><%=h external_service.description %></td>
    <td data-title="<%= t('.actions') %>" class="table-actions">
      <%= link_to edit_external_service_path(external_service), :class=> "btn" do%>
       <i class="icon-pencil"></i> <%=t('link.edit')%>
      <% end %>
    </td>
    <td class="table-actions">
      <%= link_to( external_service_path(external_service),
                    :confirm => t('destroy_confirm',
                    :object_name => external_service.uid),
                    :method => :delete, :class=> 'btn btn-danger' ) do %>
        <i class="icon-trash"></i> <%=t('link.destroy')%>
      <% end %>
    </td>
  </tr>
<% end %>
</table>

<% content_for :right do %>
<div>
  <%= link_to new_external_service_path, :class => 'btn' do%>
   <i class="icon-plus"></i> <%= t('link.new_external_service')%>
  <% end %>
</div>
<% end %>