source 'http://rubygems.org'

gem "sinatra"
gem "sinatra-contrib"
gem "uuid"
gem "puma"
gem "multi_json"
gem "yard"
gem "rack-rewrite"
gem "addressable"
gem "jwt"
gem "gssapi", :git => "https://github.com/opinsys/gssapi.git", :branch => "gss_krb5_copy_ccache"
gem "sinatra-r18n"
gem "redcarpet"
gem "debugger"
gem "pry"
gem "redis"

group :rest_development do
  gem "shotgun"
  gem "timecop"
  gem "m"
  # Load development gems from puavo-users if we are in development or testing
  # env
  if ENV["RACK_ENV"] != "production"
    STDERR.puts "Using the puavo-users Gemfile too"
    eval File.read('../Gemfile'), nil, '../Gemfile'
  end
end

