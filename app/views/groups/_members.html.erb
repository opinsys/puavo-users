<div class="contentBox"><header>
<% if @num_hidden == 0 %>
<%= t('.title') %> (<%= @members.count %>)
<% else %>
<%= t('.title') %> (<%= @members.count %>) <em>(+<%= @num_hidden %> <%= t('.hidden_title') %></em>)
<% end %>
</header><div class="contents">
<table>
  <% @members.each do |member| %>
  <% if member.puavoRemovalRequestTime %>
  <tr class="groupUserMarkedForDeletion">
  <% else %>
  <tr>
  <% end %>
    <td>
      <%= link_to "#{member.displayName} (#{member.uid})", user_path(@school, member) %>
      [<%= member.school.displayName %>]
      <% if member.puavoLocked %><i class='icon-lock' title="<%= t('users.show.user_is_locked') %>"></i><% end %>
    </td>

    <td>
      <%= link_to(t('.remove'),
                    remove_user_group_path(school_id: member.school.id,
                                           id: @group.puavoId,
                                           :user_id => member.puavoId),
                    remote: true,
                    method: :put,
                    class: "btn") %>
    </td>
  </tr>
  <% end %>
</table>
</div></div>
