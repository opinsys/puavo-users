source "http://rubygems.org"

# Some code and dependencies of puavo-web is used in puavo-rest during test
# runs (ActiveLdap models). But in production we can safely ignore those.
File.open("../Gemfile.shared") do |f|
  eval f.read, nil, "../Gemfile.shared"
end rescue Errno::ENOENT

gem "sinatra"
gem "sinatra-contrib"
gem "uuid"
gem "puma", "3.10.0"
gem "rack-rewrite"
gem "addressable"
gem "jwt", "2.1.0"
gem "json", "2.1.0"
gem "gssapi", :git => "https://github.com/opinsys/gssapi.git", :branch => "gss_krb5_copy_ccache"
gem "sinatra-r18n"
gem "redcarpet"
gem "pry"
gem "redis", "3.3.5"
gem "fluent-logger"
gem "yajl-ruby"
gem "msgpack"
gem "colorize"
gem "redis-namespace", "1.6.0"
gem "icalendar"
gem "httparty", "0.15.6"
gem "pony"
gem "gibberish"
gem "sinatra-support", "1.2.2", :require => "sinatra/support"
gem "redlock", "0.2.0"
gem "elasticsearch"
gem "http", "3.0.0"
gem "dnsruby"
gem "mechanize"
gem "net-ldap", "0.16.1"
gem "byebug"
gem "ntlm-http", "0.1.1"

