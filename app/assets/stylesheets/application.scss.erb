    border: 1px solid $toolsDropdownBorder;
    padding: 5px;

    box-shadow: 0 0 10px $defaultBoxShadowColor;

    z-index: 2;
  }

  /* Make the dropdown menu visible */
  .haveDropdown:hover .dropdown {
    visibility: visible;
    display: block;
  }

  /* Tool dropdown menu entries */
