/*
  Tables
*/

table {
  border-collapse: collapse;
}

th, td {
  vertical-align: middle;
  margin: 0;
  padding: 6px;
}

th {
  font-size: 110%;
  text-align: left;
  text-decoration: none;
}

/* Lists of schools, users, devices, etc. */
.list {
  width: 100%;
  color: $listFore;

  th {
    background: $listHeadingBack;
    color: $listHeadingFore;
    border-top: 1px solid $listHeadingBorder;
    border-left: 1px solid $listHeadingBorder;
    border-bottom: 1px solid $listHeadingBorder;
    padding: 10px;
    font-size: 100%;
  }

  tbody > tr:last-child {
    border-bottom: 1px solid $listHeadingBorder;
  }

  th:first-of-type {
    border-left: none;
  }

  tr {
    /* NORMAL ROWS */
    &:nth-child(odd) {
      background: $listOddRowBack;

      .selectedColumn {
        background: darken($listOddRowBack, 5%);
      }
    }

    &:nth-child(even) {
      background: $listEvenRowBack;

      .selectedColumn {
        background: darken($listEvenRowBack, 5%);
      }
    }

    &:hover {
      background: $listRowHoverBack;

      .selectedColumn {
        background: darken($listRowHoverBack, 5%);
      }
    }

    /* SELECTED ROWS */
    &.selectedRow:nth-child(odd) {
      background: $listSelectedOddBack;

      .selectedColumn {
        background: darken($listSelectedOddBack, 10%);
      }
    }

    &.selectedRow:nth-child(even) {
      background: $listSelectedEvenBack;

      .selectedColumn {
        background: darken($listSelectedEvenBack, 10%);
      }
    }

    &.selectedRow:hover {
      background: $listSelectedHoverBack;

      .selectedColumn {
        background: darken($listSelectedHoverBack, 5%);
      }
    }

    /* ROWS THAT DID NOT FAIL */
    &.processingSuccessfull:nth-child(odd) {
      background: $listOKOddBack;

      .selectedColumn {
        background: darken($listOKOddBack, 10%);
      }
    }

    &.processingSuccessfull:nth-child(even) {
      background: $listOKEvenBack;

      .selectedColumn {
        background: darken($listOKEvenBack, 10%);
      }
    }

    &.processingSuccessfull:hover {
      background: $listOKHoverBack;

      .selectedColumn {
        background: darken($listOKHoverBack, 5%);
      }
    }

    /* ROWS THAT DID FAIL */
    &.processingFailed:nth-child(odd) {
      background: $listFailedOddBack;

      .selectedColumn {
        background: darken($listFailedOddBack, 10%);
      }
    }

    &.processingFailed:nth-child(even) {
      background: $listFailedEvenBack;

      .selectedColumn {
        background: darken($listFailedEvenBack, 10%);
      }
    }

    &.processingFailed:hover {
      background: $listFailedHoverBack;

      .selectedColumn {
        background: darken($listFailedHoverBack, 5%);
      }
    }
  }

  /* Users who are marked for later deletion */
  tr.deleted {
    &:nth-child(odd) {
      background-color: $markedForDeletionOddRowBack;

      .selectedColumn {
        background: darken($markedForDeletionOddRowBack, 5%);
      }
    }

    &:nth-child(even) {
      background-color: $markedForDeletionEvenRowBack;

      .selectedColumn {
        background: darken($markedForDeletionEvenRowBack, 5%);
      }
    }

    &:hover {
      background: $markedForDeletionRowHoverBack;

      .selectedColumn {
        background: darken($markedForDeletionRowHoverBack, 5%) !important;
      }
    }
  }

  td {
    border-left: 1px solid $listRowBorder;
  }

  td:first-of-type {
    border-left: none;
  }

  .form {
    margin-top: 20px;
    float: left;
  }

  input[type="text"] {
    width: 15em;
  }

  input[type="submit"] {
    paddin: 0;
    margin: 0;
    width: auto;
    height: auto;
    float: right;
  }

  @media #{$screen-breakpoint-one} {
    /* Minimize lists */
    width: 100%;

    .thead, th {
      display: none;
    }

    tbody > tr:last-child {
      border-bottom: none;
    }

    tr {
      display: block;
      padding: 2%;
      border-bottom: 1px solid $listRowBorder;
    }

    td {
      display: block;
      padding: 2px;
      border: none;
    }

    td:first-of-type {
      font-size: 120%;
      padding: 6px 2px;
    }

    td[data-title]:before {
      content: attr(data-title) ":\00A0";
      font-weight: bold;
    }

    .tableActions {
      display: inline-block;

      .btn {
        font-size: 90%;
        padding: 2px 10px;
      }
    }
  }

  .boolean {    /* Boolean column checkmarks */
    text-align: center;
    display: block;
    font-size: 200%;

    @media #{$screen-breakpoint-one} {
      display: inline;
      text-align: left;
      font-size: 100%;
    }
  }
}

/* Sortable column headers. Each TH element contains a flexbox DIV that
   contains two spans: one for the title, one for the sort direction
   arrow. Flexbox is used because I want to right-align the sort arrow
   and a flexbox is the only way to do that even somewhat reliably. */
.sortHeader {
  cursor: pointer;

  &:hover {
    background: $listSortableColumnHover;
  }

  /* The container DIV */
  div {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    align-items: center;

    /*
      What JavaScript taketh, CSS giveth. What a mess...
      https://css-tricks.com/slightly-careful-sub-elements-clickable-things/
    */
    pointer-events: none;

    /* The child spans */
    .title {
      display: inline;
    }

    .arrow {
      display: inline;
      margin-left: auto;    /* right-align the arrow */
    }
  }
}

/* Setup the sort direction arrows */
/* TODO: The arrows should be changed in the JavaScript code, not here. */
@mixin sortCommon($padding) {
  font-family: puavo-icons;
  font-size: 120%;
  font-weight: normal;
  padding-left: $padding;
  padding-right: 10px;
};

.orderAscending, .orderDescending {
  background: $listSortableColumnHover !important;
}

.orderNone .arrow:after {
  @include sortCommon(10px);
  content: "\f0dc";       /* up arrow, down arrow */
}

.typeString.orderAscending .arrow:after {
  @include sortCommon(5px);
  content: " \f15d";      /* A -> Z */
}

.typeString.orderDescending .arrow:after {
  @include sortCommon(5px);
  content: " \f15e";      /* Z -> A */
}

.typeNumeric.orderAscending .arrow:after {
  @include sortCommon(6px);
  content: " \f162";      /* 1 -> 9 */
}

.typeNumeric.orderDescending .arrow:after {
  @include sortCommon(6px);
  content: " \f163";      /* 9 -> 1 */
}

/* Alternate colors for the "marked for deletion" users table */
.usersMarkedForDeletion {
  tr:nth-child(even) {
    background-color: $markedForDeletionEvenRowBack;
  }

  tr:nth-child(odd) {
    background-color: $markedForDeletionOddRowBack;
  }

  tr:hover {
    background: $markedForDeletionRowHoverBack;
  }

  tr:nth-child(odd) .selectedColumn {
    background: darken($markedForDeletionOddRowBack, 5%);
  }

  tr:nth-child(even) .selectedColumn {
    background: darken($markedForDeletionEvenRowBack, 5%);
  }

  tr:hover .selectedColumn {
    background: darken($markedForDeletionRowHoverBack, 5%) !important;
  }
}

/*
----------------------------------------------------------------------------------------------------
SUPERTABLES
----------------------------------------------------------------------------------------------------
*/

.superTable {
  /* Used when the table is empty, or everything in it has been filtered away */
  .empty {
    font-style: italic;
  }

  .checkbox {
    cursor: pointer;
    width: 0;

    /* Prevent text/table cell selections when checkboxes are clicked. */
    user-select: none;

    span {
      pointer-events: none;   /* the parent TD has the event handler */
      margin: 0 auto;
      display: block;
      width: 25px;
      height: 25px;
      border: 2px solid $checkboxBorder;
      background: $checkboxBack;
    }

    &:active span {
      background: $checkboxHoverBack;
    }

    @media #{$screen-breakpoint-one} {
      /* you can't shift-click on mobile, so don't bother */
      width: auto;
    }
  }

  .selected span {
    background: url("<%= image_path('checkbox.svg') %>") no-repeat $checkboxBack;
    background-size: cover;
  }

  .selected:active span {
    background: url("<%= image_path('checkbox.svg') %>") no-repeat $checkboxHoverBack;
    background-size: cover;
  }

  .adminUsers {
    color: $importantBasicInfo;
  }
}

.disabledTable {
  opacity: 0.5;
}

/* Supertable controls */
.tableControls {
  color: $listHeadingFore;
  margin-bottom: 5px;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;

  .disabledOption {
    display: none;
  }

  /* Column editor, CSV download, etc. buttons and status/stats messages */
  .controls {
    display: flex;
    align-items: center;

    @media #{$screen-breakpoint-one} {
      flex-direction: column;

      .btn {
        width: 100%;
        text-align: center;
      }
    }

    p {
      display: inline;
      margin: 0;
      padding: 5px 10px;
      font-weight: bold;

      @media #{$screen-breakpoint-one} {
        padding: 5px 0 0 0;
        margin: 0;
      }
    }

    .status {
      font-style: italic;
    }

    .good {
    }

    .failed {
      background: $supertableNetworkErrorBack !important;
      color: $supertableNetworkErrorFore !important;
      font-weight: bold;
      font-style: normal;
    }
  }

  /* Wraps everything related to table filters */
  .filters {
    width: 100%;
    border: 1px solid $contentBoxBorder;
    margin: 5px 0 0 0;
    padding: 0;

    display: flex;
    flex-direction: column;
  }

  /* Table filter control buttons */
  .filterControl {
    display: flex;
    flex-direction: row;
    text-align: left;

    /* Wrap checkboxes and their labels in DIVs so they can be handled as blocks */
    div {
      padding: 0;
      margin: 0;
      display: flex;
      align-items: center;
    }

    /* Master filtering enable checkbox */
    .filteringEnabled {
      font-weight: bold;
      margin: 0 1em 0 0;
    }

    label {
      margin-right: 1em;
    }

    @media #{$screen-breakpoint-one} {
      display: flex;
      flex-direction: column;
    }
  }

  /* Main container for the table filters */
  .filterList {
    flex-direction: row;
    flex-wrap: wrap;

    /* Container for each filter term */
    .filter {
      display: flex;
      align-items: center;
      padding: 2px 10px;
      margin: 0;

      @media #{$screen-breakpoint-one} {
        flex-wrap: wrap;
      }

      &:hover {
        background: $supertableFilterListFilterHover;
      }

      /* Wrapper for term "controls" (activation checkbox, target column, operator) */
      .control {
        margin-right: 10px;

        /* vertical centering */
        display: flex;
        align-items: center;

        select {
          margin-left: 5px;
        }
      }

      /*
          Wrapper for the filtering term, whatever it may be. Some have a text input box, some have
          radio buttons, some something else.
      */
      .term {
        display: inline;

        min-width: 250px;
        min-height: 30px;   /* try to equalize heights (HACK) */
        padding: 2px;
        margin-right: 10px;

        ::placeholder {
          font-style: italic;
        }

        @media #{$screen-breakpoint-one} {
          min-width: auto;
        }

        /* A term with only one input element, use all available width */
        .single {
          width: 100%;
        }

        input {
          padding: 5px;   /* Chrome, why are you like that? Firefox plays along nicely, why can't you? */
        }

        /* Boolean terms */
        .boolean {
          display: flex;        /* a hacky attempt to center the checkbox and its label */
          align-items: center;
          padding-top: 2px;

          input, label {
            display: inline;
          }

          label {
            padding-left: 5px;
          }
        }

        /* Unixtime terms */
        .year {
          font-family: monospace;
          width: 4em;
        }

        .month, .day, .hour, .minute {
          font-family: monospace;
          width: 3em;
        }
      }

      /* Invalid terms */
      .invalid {
        background: $supertableTermInvalidBack;
      }

      /* Container for the add/remove buttons */
      .buttons {
        display: inline;

        @media #{$screen-breakpoint-one} {
          margin-left: 30px;
        }

        span {
          display: inline-block;
          padding: 3px 9px;
          text-align: center;
          cursor: pointer;

          @media #{$screen-breakpoint-one} {
            padding: 2px 15px;
          }
        }

        .add {
          color: $supertableFilterAddFore;
          background: $supertableFilterAddBack;
          border: 1px solid $supertableFilterAddBorder;
          margin-right: 10px;

          &:hover {
            background: $supertableFilterAddHoverBack;
          }
        }

        .remove {
          color: $supertableFilterRemoveFore;
          background: $supertableFilterRemoveBack;
          border: 1px solid $supertableFilterRemoveBorder;

          &:hover {
            background: $supertableFilterRemoveHoverBack;
          }
        }
      }
    }
  }
}

.tableToolbox {
  margin-top: 5px;
  padding: 0;
  border: 1px solid $contentBoxBorder;
  box-shadow: 3px 3px 0 $contentBoxShadow;

  header {
    padding: 5px 10px;
    background: $contentBoxHeaderBack;
    color: $contentBoxHeaderFore;
    border-bottom: 1px solid $contentBoxBorder;
    font-weight: bold;
  }

  section {
    padding: 10px;
  }
}

/* Mass operations */
.massOperation {
  .selector {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    align-items: center;

    > * {
      display: inline;
    }

    p {
      margin: 0;
      padding: 0 10px 0 0;
    }

    select {
      margin-right: 10px;
    }

    @media #{$screen-breakpoint-one} {
      flex-wrap: wrap;
    }
  }

  progress {
    margin-left: 10px;
    margin-right: 10px;
    width: 300px;
    visibility: hidden;
  }

  .progressCount {
    font-family: monospace;
    font-weight: bold;
    font-size: 150%;
  }

  /* Container for the mass operation settings child */
  .settings {
    margin: 10px 0 0 0;
    padding: 5px;
    background: $massOpSettingsBack;
    border: 1px solid $massOpSettingsBorder;

    @media #{$screen-breakpoint-one} {
      margin-top: 0;
    }
  }

  .settingsChild {
    .mobileTitle {
      display: none;
    }

    th {
      font-size: 100%;
      text-align: right;
    }

    input[type="text"] {
      width: 500px;
    }

    p.validityWarning {
      margin: 0;
      padding: 2px;
      font-style: italic;
    }

    @media #{$screen-breakpoint-one} {
      width: 100%;

      .thead, th {
        display: none;
      }

      tbody > tr:last-child {
        border-bottom: none;
      }

      tr {
        display: block;
        padding: 2px;
      }

      td {
        display: block;
        padding: 2px;
        border: none;
      }

      input[type="text"] {
        width: 100%;
      }

      .mobileTitle {
        display: block;
        font-weight: bold;
      }
    }
  }

  /* Selection status message / counters */
  .status {
    margin: 10px 0 0 0;

    /* individual parts of the message */
    .total { color: $massOpStatusNormal; }
    .selected { color: $massOpStatusSelected; }
    .ok { color: $massOpStatusOK; }
    .failed { color: $massOpStatusFailed; }
  }

  .hiddenWarning {
    /* Partially copied from the generic error class */
    color: $genericErrorFore;
    background: $genericErrorBack;
    border: 2px solid $genericErrorBorder;
    padding: 5px;
    margin-top: 10px;
  }
}

.massSelectMenu {
  margin: 5px 5px 10px 0;
  padding: 0;
  display: block;
  float: left;
  width: 25px;
  height: 25px;

  border: 2px solid $massSelectMenuBorder;
  background: url("<%= image_path('checkbox.svg') %>") no-repeat 50% 50% $baseOrangeGradient;
  background-size: contain;

  /* FIXME: If the page is not tall enough, the bottom of this menu gets cut off by the footer! */
  ul {
    display: none;

    background: $massSelectMenuBack;
    border: 2px solid $massSelectMenuBorder;
    padding: 5px;
    margin: 0;

    position: absolute;
    top: auto;
    left: auto;
    margin-left: 21px;
    margin-top: -2px;
    width: 300px;

    box-shadow: 0 10px 10px $massSelectMenuShadow;

    list-style: none;

    li {
      margin: 0;
      padding: 0;
    }

    li.sep {
      border-bottom: 1px solid $massSelectMenuBorder;
      margin: 5px 0;
    }
  }

  a {
    display: block;
    padding: 5px 10px;
    color: $massSelectMenuFore !important;
    font-weight: normal !important;
    text-decoration: none;
    cursor: pointer;
    outline: none;
  }

  a:hover {
    color: $massSelectMenuHighlightFore !important;
    background: $massSelectMenuHighlightBack !important;
  }

  &:hover ul {
    display: block;
  }
}

/* Previously clicked row indicator */
.previousRow {
  .checkbox {
    outline: 1px dotted $listPreviousRow;

    @media #{$screen-breakpoint-one} {
      /* you can't shift-click on mobile, so don't bother */
      outline: none;
    }
  }
}
