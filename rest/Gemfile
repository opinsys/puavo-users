source "http://rubygems.org"

# Some code and dependencies of puavo-web is used in puavo-rest during test
# runs (ActiveLdap models). But in production we can safely ignore those.
File.open("../Gemfile.shared") do |f|
  eval f.read, nil, "../Gemfile.shared"
end rescue Errno::ENOENT

gem "sinatra", "2.0.4"
gem "sinatra-contrib"
gem "uuid"
gem "puma"
gem "rack-rewrite"
gem "rack", "2.1.2"   # 2.2.x breaks some VirtualHostBase tests
gem "addressable"
gem "jwt", "2.1.0"
gem "json"
gem "gssapi", :git => "https://github.com/opinsys/gssapi.git", :branch => "gss_krb5_copy_ccache"
gem "sinatra-r18n"
gem "pry"
gem "redis"
gem "yajl-ruby"
gem "colorize"
gem "redis-namespace", "1.6.0"  # Ruby 2.3.x
gem "httparty"
gem "pony"
gem "gibberish"
gem "sinatra-support", :require => "sinatra/support"
gem "redlock"
gem "elasticsearch"
gem "http"
gem "dnsruby"
gem "mechanize"
gem "net-ldap"
gem "byebug", "11.0.1"    # Ruby 2.3.x
gem "ntlm-http"

# Ruby 2.3.x
gem "ttfunk", "1.5.1"
gem "gettext", "3.2.9"

group :test do
  gem "shotgun"
  gem "timecop"
  gem "webmock"
  gem "m"
  gem "minitest"
  gem "yard"
end
