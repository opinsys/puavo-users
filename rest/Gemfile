source "http://rubygems.org"

# Some code and dependencies of puavo-web is used in puavo-rest during test
# runs (ActiveLdap models). But in production we can safely ignore those.
File.open("../Gemfile.shared") do |f|
  eval f.read, nil, "../Gemfile.shared"
end rescue Errno::ENOENT

gem "sinatra"
gem "sinatra-contrib"
gem "puma"
gem "rack-rewrite"
gem "addressable"
gem "jwt"
gem "json"
gem "gssapi", :git => "https://github.com/opinsys/gssapi.git", :branch => "gss_krb5_copy_ccache"
gem "sinatra-r18n"
gem "redcarpet"
gem "pry"
gem "redis", "3.3.5"
gem "fluent-logger"
gem "yajl-ruby"
gem "msgpack"
gem "colorize"
gem "redis-namespace", "1.6.0"
gem "icalendar"
gem "httparty"
gem "pony"
gem "gibberish"
gem "sinatra-support", :require => "sinatra/support"
gem "redlock", "0.2.2"
gem "elasticsearch"
gem "http"
gem "dnsruby"
gem "mechanize"
gem "byebug"
gem "ntlm-http"

group :test do
  gem "shotgun"
  gem "timecop"
  gem "webmock"
  gem "m"
  gem "minitest"
end
